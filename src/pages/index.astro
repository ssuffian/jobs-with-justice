		<script is:inline>
			document.addEventListener('DOMContentLoaded', () => {
				const scrollWrapper = document.querySelector('#scrollWrapper');
				const pauseBtn = document.querySelector('#pauseBtn');
				const playBtn = document.querySelector('#playBtn');
				
				if (scrollWrapper) {
					// Set random starting position (0-50% since images are duplicated)
					const randomStart = Math.random() * 50;
					scrollWrapper.style.setProperty('--start-position', `-${randomStart}%`);
					
					if (pauseBtn && playBtn) {
						pauseBtn.addEventListener('click', () => {
							scrollWrapper.classList.add('paused');
							pauseBtn.style.display = 'none';
							playBtn.style.display = 'flex';
						});
						
						playBtn.addEventListener('click', () => {
							scrollWrapper.classList.remove('paused');
							playBtn.style.display = 'none';
							pauseBtn.style.display = 'flex';
						});
					}
				}
				
			});
