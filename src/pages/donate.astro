---
import BaseHead from '../components/BaseHead.astro';
import DonateButton from '../components/DonateButton.astro';
import Hero from '../components/Hero.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../consts';
---

<BaseLayout>
	<Fragment slot="head">
		<BaseHead title={`Donate - ${SITE_TITLE}`} description="Support our work with a donation" />
		<style>
			main {
				width: 100% !important;
				max-width: 100% !important;
				margin: 0;
				padding: 0 !important;
				box-sizing: border-box;
				overflow-x: hidden;
			}
			.donate-section {
				max-width: 900px;
				margin: 3em auto;
				padding: 0 1em;
				text-align: center;
			}
			.donate-section p {
				font-size: 1.2em;
				line-height: 1.8;
				margin-bottom: 2em;
				color: var(--deep-space-blue);
			}
		</style>
	</Fragment>
	<main>
			<Hero title="Donate to Philly JWJ" subtitle="Your support allows us to continue to fight and win for working people in Philadelphia" />
			<div class="donate-section">
				<p>
					Every contribution helps us train organizers, support workers, and confront injustice. Together, we build power.
				</p>
				<DonateButton text="Donate Funds" size="large" variant="secondary" />
			</div>
		</main>
</BaseLayout>

