---
interface Props {
	title: string;
	subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="hero">
	<h1>{title}</h1>
	{subtitle && <p>{subtitle}</p>}
</section>

<style>
	.hero {
		background: linear-gradient(135deg, var(--deep-space-blue) 0%, #024959 100%);
		color: var(--white);
		padding: 2em 2em;
		text-align: center;
		margin-bottom: 0;
		width: 100%;
	}
	.hero h1 {
		color: var(--white);
		margin: 0 0 0.5em 0;
		font-size: 3em;
	}
	.hero p {
		color: var(--silver);
		font-size: 1.1em;
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.6;
	}
	@media (max-width: 768px) {
		.hero {
			padding: 1.5em 1.5em;
		}
		.hero h1 {
			font-size: 2.2em;
		}
	}
</style>
