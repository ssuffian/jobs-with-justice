---

<div class="logo-carousel">
	<h2>Our Partners</h2>
	<div class="logo-scroll-container">
		<div class="logo-scroll-wrapper" id="logoScrollWrapper">
			{logos.map((logo) => (
				<a href={logo.website} target="_blank" rel="noopener noreferrer" class="logo-slide">
					<Image src={logo.src} alt={logo.alt} />
					<span class="logo-name">{logo.alt}</span>
				</a>
			))}
			{/* Duplicate for seamless loop */}
			{logos.map((logo) => (
				<a href={logo.website} target="_blank" rel="noopener noreferrer" class="logo-slide">
					<Image src={logo.src} alt={logo.alt} />
					<span class="logo-name">{logo.alt}</span>
				</a>
			))}
		</div>
	</div>
</div>

<style>
	.logo-carousel {
		background: var(--white);
		padding: 2em 0;
		text-align: center;
		overflow: hidden;
	}
	.logo-carousel h2 {
		color: var(--deep-space-blue);
		margin: 0 0 1em 0;
		font-size: 1.5em;
	}
	.logo-scroll-container {
		position: relative;
		width: 100%;
		overflow: hidden;
	}
	.logo-scroll-wrapper {
		display: flex;
		width: fit-content;
		animation: logoScroll 160s linear infinite;
	}
	.logo-scroll-wrapper:hover {
		animation-play-state: paused;
	}
	@keyframes logoScroll {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-50%);
		}
	}
	.logo-slide {
		flex-shrink: 0;
		width: 120px;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-start;
		margin: 0 1.5em;
		text-decoration: none;
	}
	.logo-slide img {
		max-width: 100%;
		max-height: 70px;
		object-fit: contain;
		filter: grayscale(0%);
		opacity: 1;
		transition: filter 0.3s, opacity 0.3s;
	}
	.logo-slide:hover img {
		filter: grayscale(100%);
		opacity: 0.7;
	}
	.logo-name {
		color: var(--deep-space-blue);
		font-size: 0.7em;
		font-weight: 600;
		margin-top: 0.5em;
		text-align: center;
		line-height: 1.2;
		max-width: 100%;
	}
	@media (max-width: 768px) {
		.logo-slide {
			width: 100px;
			margin: 0 1em;
		}
		.logo-slide img {
			max-height: 50px;
		}
		.logo-name {
			font-size: 0.6em;
		}
	}
</style>
