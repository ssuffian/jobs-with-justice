---
import { Image } from 'astro:assets';
import logoImage from '../assets/logo-transparent.png';
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<a href="/" class="logo-link">
			<Image src={logoImage} alt={SITE_TITLE} />
		</a>
		<button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
			<span class="hamburger-line"></span>
			<span class="hamburger-line"></span>
			<span class="hamburger-line"></span>
		</button>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<div class="dropdown">
				<HeaderLink href="/about" class="dropdown-toggle">About</HeaderLink>
				<div class="dropdown-menu">
					<HeaderLink href="/about/history">Our History</HeaderLink>
					<HeaderLink href="/about/coalitions">Coalitions</HeaderLink>
					<HeaderLink href="/about/staff">Staff</HeaderLink>
				</div>
			</div>
			<div class="dropdown">
				<HeaderLink href="/our-work" class="dropdown-toggle">Our Work</HeaderLink>
				<div class="dropdown-menu">
					<a href="https://fairwarehouses.org/" target="_blank" rel="noopener noreferrer">Philly Fair Warehouses</a>
					<HeaderLink href="/our-work/our-coalition">Our Coalition</HeaderLink>
					<HeaderLink href="/our-work/power-school">Power School</HeaderLink>
					<HeaderLink href="/our-work/strategic-support-for-peoples-actions">Strategic Support for People's Actions</HeaderLink>
				</div>
			</div>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/get-updates">Get Updates</HeaderLink>
			<a href="/donate" class="donate-link">Contribute</a>
		</div>
		<div class="social-links">
			<a href="https://www.instagram.com/phillyjobswithjustice/" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Follow Philadelphia Jobs With Justice on Instagram</span>
